{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container-fluid container-sign-in">
    <div class="row">
        <div class="col-12 col-md-6 background-sign-in flex-center">
            <form method="post" class="border-form flex-column">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a
                        href="{{ path('app_logout') }}">Logout</a>
                </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                <label class="color-label" for="inputEmail">Email</label>
                <input class="margin-input input-custom"  type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    required autofocus >
                <label  class="color-label" for="inputPassword">Mot de passe</label>
                <input class="margin-input input-custom"  type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
                
                <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
                </div>
                #}

                <button class="btn btn-lg btn-sign-in my-5" type="submit">
                    Se connecter
                </button>
            </form>
        </div>
        <div class="col-12 col-md-6 no-padding">
            <img src="{{ asset('assets/img/sign-in2.jpeg') }}" class="img-fluid">
        </div>
    </div>
</div>
{% endblock %}