{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

 {% block javascripts %}
 <script src="../public/assets/js/panier.js"></script>
  <script src="/assets/js/panier.js"></script> 
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.5.1/main.min.css" integrity="sha256-uq9PNlMzB+1h01Ij9cx7zeE2OR2pLAfRw3uUUOOPKdA=" crossorigin="anonymous">

    <style>
		
		.img-product {
			max-height: 10rem;
		}

		.card-border {

		border: 4px white solid;
    	box-shadow: 0px 1px 20px 6px #cccccc;
    	border-radius: 10%;
	}
	.card-btn {
		background-color: var(--primary-color);
	}

	.imgshop {
		width: 100%;
		height: 100%;
	}

    </style>
{% endblock %}
{% block body %}


	<div class="container-fluid " id="panier">
		<div class="card card-border p-0"> 
			<h2 class="titrePanier card-title text-center">Votre Panier</h2>

			<h2 class="text-center">Panier</h2>
				<script>
				AfficherPanier("panier");
				</script>

			<div class="container-fluid d-flex flex-row  justify-content-center">
					
				{{ form_start(form) }}
				
				{{ form_widget(form) }}
				<a href="{{ path('cart') }}">
				<button class="btn btn-dark m-3" id="checkout-btn" type="submit" >{{ button_label|default('Valider') }}</button>
				</a>
				{{ form_end(form) }}
				{# <button class="btn btn-dark m-3" onclick='resetPanier()'>Reset le panier
				</button> #}
			</div>
		</div>

	</div>


	<script>
			setPanier();
		</script>
{% endblock %}
