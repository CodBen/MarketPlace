{% extends 'base.html.twig' %}

{% block title %}PAGE shops
{% endblock %}


{% block stylesheets %}
	<style>
	.card-border {

		border: 4px white solid;
    	box-shadow: 0px 1px 20px 6px #cccccc;
    	border-radius: 10%;
	}

	.card-btn {
		background-color: var(--primary-color);
	}

	.hr {
		background-color: var(--primary-color);
		border-top: 1px solid var(--primary-color);
		width: 90%;
	}
	</style>
{% endblock %}

{% block body %}

	<section class="container-fluid p-0">

		<div class="row d-flex pl-5 m-5">

		<h2 class="text-center">Liste des commerces</h2>
			{% for shop in shops %}
				<div class="card card-border p-0 col-md-5 m-xl-5 m-md-2 col-xl-3">
					<img class="card-img-top" src="{{ asset('assets/uploads/' ~ shop.img ) }}">
					<div class="card-body">
						<h5 class="card-title m-0">{{ shop.name }} ( {{ shop.adress }} )</h5>
                        <hr class="hr ml-3">
						<p class="font-weight-light card-text">Moyen de paiement : {{ shop.paiement }}</p>
					</div>
					<a class="p-2 card-btn text-white text-center" href="{{ path('shop', { 'id' : shop.id }) }}">Voir la boutique</a>
					
				</div>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</div>


	</section>

{% endblock %}

{% block javascripts %}

	<script></script>

{% endblock %}
