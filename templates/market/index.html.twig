{% extends 'base.html.twig' %}

{% block title %}
Page d'accueil
{% endblock %}

{% block stylesheets %}
<style></style>
{% endblock %}


{% block body %}
<section>
	<div class="container-fluid container-acceuil">
		<div class="row w--100 h--100">
			<div class="col-12 col-md-12">
				<div class="row flex-center h--100">
					<div class="col-6 flex-start flex-column absolute-form">
						<h1 class="flex-center">Click'N'Collect</h1>
						<div class="row flex-center">
							<div class="col-8  flex-start flex-column form-flex">
								<h2>Rechercher un commerce par Code postale</h2>
								{{ form_start(form) }}
								{{ form_widget(form) }}
								<button class="btn btn-rechercher">{{ button_label|default('') }} <i
										class="fas fa-search-location fa-2x"></i></button>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
					<div class="col-6 flex-start align-center">
						<img src="{{ asset('assets/img/ecommerce.png') }}" class="img-fluid img-header">
					</div>
					<div class="col-6 flex-end align-center">
						<img src="{{ asset('assets/img/store.png') }}" class="img-fluid img-header">
					</div>
					

				</div>
			</div>
		</div>
		<div class="sub-acceuil">
		</div>
	</div>
</section>

<section class="py-5 container-rechercher">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6">
				
			</div>
			<div class="col-12 col-md-6">
				<img src="{{ asset('assets/img/clickncollect.png') }}" class="img-fluid">
			</div>
		</div>
	</div>
</section>

<section class="py-5 container-concept">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6">
				<h2>3 raisons de choisirs Click'N'Collect</h2>
			</div>
			<div class="row flex-center">
				<div class="col-md-6 col-12 flex-row-responsive">
					<div class="col-6 col-sm-4 card-avantages my-3 margin-responsive">
						<div class="row">
							<div class="col-12 col-sm-12 flex-center color-avantages">
								<i class="fas fa-store fa-3x"></i>
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-sm-12 flex-center color-avantages py-3">
								<p class="text-center">Soutenez les commerçants locaux.</p>
							</div>
						</div>
					</div>

					<div class="col-12 col-sm-4 card-avantages my-3 margin-responsive">
						<div class="row">
							<div class="col-12 col-sm-12 flex-center color-avantages">
								<i class="fas fa-map-marker-alt fa-3x"></i>
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-sm-12 flex-center color-avantages py-3">
								<p class="text-center">Commandez de n'importe où.</p>
							</div>
						</div>
					</div>

					<div class="col-12 col-sm-4 card-avantages my-3 margin-responsive">
						<div class="row">
							<div class="col-12 col-sm-12 flex-center color-avantages">
								<i class="fas fa-tachometer-alt fa-3x"></i>
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-sm-12 flex-center color-avantages py-3">
								<p class="text-center">Facile et rapide d'utilisation.</p>
							</div>
						</div>
					</div>
				</div>
				<div class="col-12 col-sm-6 flex-center background-vecteur">
					<img src="{{ asset('assets/img/shop.png') }}" class="img-cnc">
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}