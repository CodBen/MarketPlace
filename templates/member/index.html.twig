{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

  .topnavsmall {
        display : none;
        }
  .marginleft {
          margin-left: 7rem;
        }
    @media screen and (max-width: 575.98px) {
        h4 {
          font-size: 1rem;
        }

        .fontsmall {
          font-size: 0.75rem;
        }

        .topnavsmall {
          display: block;
         
          overflow: hidden;
        }
        .margin15 {
          margin : 0.15rem;
          color : white;
        }
        .margin25 {
          margin : 0.25rem
        }
        .marginleft {
          margin-left: 0.5rem;
        }

			}
</style>

<div class="layout with-sidenav">
  <div class="topnavsmall margin25">
        <a  class="fontsmall bc btn p-1 margin15 "  href="{{ path('app_account')}}">Mon compte</a>
        <a class="fontsmall bc btn p-1 margin15 "  href="{{ path('app_account_edit')}}">Mon profil</a>
        <a  class="fontsmall bc btn p-1 margin15 " href="{{ path('app_account_orders')}}">Mes commandes</a>
        <a  class="fontsmall bc btn p-1 margin15 " href="{{ path('app_account_rdv')}}">Mes rendez vous</a>
  </div>
    <div class="container-fluid  d-flex flex-row">
      <div id="example-sidenav" data-ax="sidenav" class="sidenav shadow-1 large fixed white">
        <div class="sidenav-header">
          <p>Bonjour, {{ app.user.name }} </p>
        </div>
        <a href="{{ path('app_account')}}" class="sidenav-link active">Mon compte</a>
        <a href="{{ path('app_account_edit')}}" class="sidenav-link">Modifier mon profil</a>
        <a href="{{ path('app_account_orders')}}" class="sidenav-link">Mes commandes</a>
        <a href="{{ path('app_account_rdv')}}" class="sidenav-link">Mes rendez vous</a>
      </div>

      
    
      <div class="example-wrapper marginleft">
        <div class="container-fluid p-3 shadow-2 mb-3">
          <h4>Mes données personnelles</h4>
          <hr>
          <p class="fontsmall" >N'hesitez pas à modifier vos coordonnées pour les mettre a jour. </p>
          <div class="card shadow-1">
            <p class="m-3 fontsmall">{{ app.user.firstname }} {{app.user.name}}</p>
            <hr class="w-75 m-auto">
            <p class="m-3 fontsmall">{{app.user.email}}</p>
          </div>
        </div>

        <div class="container-fluid shadow-2 p-3 border">
          <h4>Ma dernière commande</h4>
          <hr>
          {% if lastOrder is not null %}
          <div class="grix xs4 p-3 bc text-white shadow-2 align-items-center">
            <p class="fontsmall" >Nom du magasin</p>
            <p class="fontsmall" >Numéro de commande</p>
            <p class="fontsmall" >Total</p>
            <p class="fontsmall" >Statut</p>
          </div>
            <div class="grix xs4 p-3 shadow-2 align-items-center" >
              <p class="m-0 fontsmall">{{lastOrder.shop.name }}</p>
              <p class="m-0 fontsmall">{{ lastOrder.orderNumber }}</p>
              <p class="m-0 fontsmall">{{ lastOrder.checkout }} €</p>
              <p class="m-0 fontsmall">{{  lastOrder.orderDetails.orderStatus }}</p>
            </div>
            {% else %}
            <p class="fontsmall" >Vous n'avez pas de commandes</p>
            {% endif %}
        </div>
      
      
        {# <div class="grix xs4 container">
          <div class="col-xs4"> profil de {{ app.user.firstname }} </div>
          <div class="col-xs1">Nom</div>
          <div class="col-xs3">{{app.user.name}}</div>
          <div class="col-xs1">Prenom</div>
          <div class="col-xs3">{{app.user.firstname}}</div>
          <div class="col-xs1">Email</div>
          <div class="col-xs3">{{app.user.email}}</div>
          <div class="col-xs4"> 
            <a href="{{ path('app_account_edit')}}" class="btn shadow-1 rounded-1 blue">Modifier le profil</a>
            <a href="{{ path('app_account_edit_mdp') }}" class="btn shadow-1 rounded-1 blue">Modifier le mot de passe</a>
          </div>
        </div> #}
      </div>
    </div>
</div>
{% endblock %}
