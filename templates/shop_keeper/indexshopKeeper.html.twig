{% extends 'base.html.twig' %}

{% block title %}PAGE ACCUEIL
{% endblock %}


{% block stylesheets %}
    <style>
        .form-control {
            position: relative;
            display: block;
            border: 1px solid #bbb8b8;
            
           
            transition: border .2s ease,box-shadow .3s ease;
            height: 2.5rem;
            width: 50%;
            
           
            appearance: none;
            line-height: 1.3;
            color: inherit;
            background-color: inherit;
        }

        .form-inline {
            flex : auto;
            flex-direction: row;
        }
        .task_field {
            width : 150px;
            display : flex;
        }
    
    </style>
{% endblock %}

{% block body %}

	<div class="container grix xs2 m-5">
		<div>
			<img class="img-test mr-5" src="{{ asset('assets/uploads/' ~ app.user.shop.img ) }}">
		</div>
		<div class="">
			{{form_start(form)}}
		Lundi : {{ form_widget(form.Lundi, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Lundiclose, {'attr': {'class': 'task_field'}}) }}
		Mardi : {{ form_widget(form.Mardi, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Mardiclose, {'attr': {'class': 'task_field'}}) }}
		Mercredi : {{ form_widget(form.Mercredi, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Mercrediclose, {'attr': {'class': 'task_field'}}) }}
		Jeudi : {{ form_widget(form.Jeudi, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Jeudiclose, {'attr': {'class': 'task_field'}}) }}
		Vendredi : {{ form_widget(form.Vendredi, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Vendrediclose, {'attr': {'class': 'task_field'}}) }}
		Samedi : {{ form_widget(form.Samedi, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Samediclose, {'attr': {'class': 'task_field'}}) }}
		Dimanche : {{ form_widget(form.Dimanche, {'attr': {'class': 'task_field'}}) }} - {{ form_widget(form.Dimancheclose, {'attr': {'class': 'task_field'}}) }}
			<button class="btn btn-primary">{{ button_label|default('Mettre à jour les horaires') }}</button>
			{{ form_end(form) }}
                
		</div>
	</div>
